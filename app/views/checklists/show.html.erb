<p id="notice"><%= notice %></p>

<h1><%= @checklist.name %></h1>
<p>
<%= link_to 'Edit', edit_checklist_path(@checklist) %>
</p>
<ol>
<% @checklist.items.each do |item| %>
	<li>
	<%= item.content %>
	</li>
<% end %>
<li>
<%= form_for([@checklist, @checklist.items.build]) do |f| %>
	<div class="field">
		<%= f.text_field :content, :rows => 1, :autofocus => true %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
</li>
</ol>
<%= link_to 'Back to Checklists', checklists_path %>
